{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}
    <h1>Trick</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ trick.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trick.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>




    <a href="{{ path('trick_index') }}">back to list</a>

    <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>

    {{ include('trick/_delete_form.html.twig') }}

    {% for comment in comments %}
        <h3>{{ comment.author.pseudo}}</h3>
        <p>{{ comment.content }}</p>
    {% endfor %}

    {% if app.user %}
        Laissez un commentaire
        {{ include('trick/_comment_form.html.twig') }}
    {% else %}
        Connectez vous pour laisser un commentaire.     <a href="{{ path('login') }}">Se connecter</a>

    {% endif %}
{% endblock %}
